<?xml version='1.0' encoding='utf-8'?>
<widget id="xyz.shantaram.VITC.Compass" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>VITC Compass</name>
    <description>
        An app for freshmen of VIT Chennai to learn about their college.
    </description>
    <icon src="www/img/logo.png" platform="android"/>
    <author email="simsid66@gmail.org" href="https://shantaram.xyz">
        Siddharth Singh
    </author>
    <content src="index.html"/>
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="Orientation" value="portrait"/>
</widget>
