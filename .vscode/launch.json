{
    "configurations": [
        {
            "name": "Run android on device|emulator",
            "type": "cordova",
            "request": "launch",
            "platform": "android",
            "target": "device|emulator",
            "sourceMaps": true,
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Attach to android on device|emulator",
            "type": "cordova",
            "request": "attach",
            "platform": "android",
            "target": "device|emulator",
            "cwd": "${workspaceFolder}",
            "sourceMaps": true
        }
    ]
}